<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ss_214_Activity">

    <EditText
        android:id="@+id/ss214_OgrenciAdiTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Öğrenci Adı"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/ss214_OgrenciNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Öğrenci Numarası"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/ss214_Ekle"
        android:layout_width="131dp"
        android:layout_height="103dp"
        android:text="EKLE"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/ss214_OgrenciNoTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/ss214_OgrenciAdiTxt"
        app:layout_constraintTop_toTopOf="@+id/ss214_OgrenciAdiTxt"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="529dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ss214_OgrenciNoTxt"
        app:layout_constraintVertical_bias="0.0">

        <ListView
            android:id="@+id/ss214_OgrenciAdiList"
            android:layout_width="196dp"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/ss214_OgrenciNoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>